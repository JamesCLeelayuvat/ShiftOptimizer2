<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controller.XMLControllers.ManagerMainMenuController"
          prefHeight="400.0" prefWidth="600.0">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="Infinity" minWidth="10" prefWidth="100"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="Infinity" minWidth="10" prefWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="Infinity" minHeight="10" prefHeight="100.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="Infinity" minHeight="10" prefHeight="100.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="Infinity" minHeight="10" prefHeight="100.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button text="See All Worker Schedules" onAction="#handleSeeWorkerSchedules" GridPane.rowIndex="0"/>
        <Button text="Input and Manage Available Shifts" onAction="#handleManageAvailableShifts" GridPane.rowIndex="1"/>
        <Button text="View Assigned Shifts" onAction="#handleViewAssignedShifts" GridPane.rowIndex="2"/>
    </children>
</GridPane>
